<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- import fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <!-- js -->
    <script defer src="/socket.io/socket.io.js"></script>
    <script defer src="script.js"></script>
    <!-- css -->
    <link rel="stylesheet" href="styles.css" />
    <!-- title -->
    <title>Quickmath</title>
</head>
<body>
    <div id="top-bar">
        <div id="logo">Quickmath</div>
        <div id="username"></div>
    </div>
    <div id="room-input">
        <form action="/room" method="POST">
            <button id="room-button" type="submit" class="button">New Room</button>
        </form>
    </div>
    <div id="rooms">
        <div id="room-container-header">Rooms</div>
        <div id="room-container">
            <% Object.keys(rooms).forEach(room => { %>
                <a href = "/room/<%= room %>">
                    <div><%=room %></div>
                </a>
            <% }) %>
        </div>
    </div>

    <div id="reload">
        <button id="reload-button" class="button">Reload page</button>
    </div>
</body>
</html>